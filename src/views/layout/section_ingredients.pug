include ../mixins/ingredient.pug
section.section.section-ingredients
  h2.section-ingredients__title Ingredients
  article.article
    h3.article__title Graham Cracker Crust
    div.ingredients-container
      +ingredient('1 and 1/2 cups (150g)', ' graham cracker crumbs',' (about 10 full sheet graham crackers)')
      +ingredient('5 Tablespoons (70g)', ' unsalted butter',', melted')
      +ingredient('1/4 cup (50g)', ' granulated sugar')
  article.article
    h3.article__title Cheesecake
    div.ingredients-container
      +ingredient('four 8-ounce blocks (904g) full-fat',' cream cheese',', softened to room temperature')
      +ingredient('1 cup (200g)',' granulated sugar')
      +ingredient('1 cup (240g) full-fat',' sour cream,',' at room temperature')
      +ingredient('1 teaspoon',' pure vanilla extract')
      +ingredient('2 teaspoons',' fresh lemon juice',' (optional, but recommended)')
      +ingredient('3 large',' eggs',', at room temperature')
      +ingredient('topping suggestions:',' salted caramel, lemon curd, strawberry topping, chocolate ganache, red wine chocolate ganache, fresh fruit, whipped cream, or raspberry sauce',' (recipe in notes) ')(class="ingredient__end")

